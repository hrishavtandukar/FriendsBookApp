<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.friendsbook.hrishav.friendsbook.Help">


    <TextView
        android:id="@+id/helpInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textStyle="normal"
        android:textSize="30dp"
        android:text="This app can be used to view your profile as well as profile of your friends. It is a app that is used to connect you with for friends."
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/backHelpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helpInfo"
        android:layout_marginTop="90dp"
        android:text="Back"
        android:layout_alignParentStart="true" />
</RelativeLayout>
